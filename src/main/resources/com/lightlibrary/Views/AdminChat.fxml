<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="chatRoot" prefHeight="810.0" prefWidth="1340.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lightlibrary.Controllers.AdminChatController">
   <children>
      <!-- Label for "IP" and Connect Button -->
      <Label layoutX="20.0" layoutY="10.0" text="Server IP:"/>
      <TextField fx:id="ipField" layoutX="80.0" layoutY="10.0" prefWidth="200.0"/>
      <Button fx:id="connectButton" layoutX="300.0" layoutY="10.0" text="Connect"/>

      <!-- Area to Display Messages -->
      <TextArea fx:id="messageDisplay" layoutX="20.0" layoutY="50.0" prefHeight="500.0" prefWidth="1300.0" editable="false" wrapText="true"/>

      <!-- TextField and Send Button for Message Input -->
      <TextField fx:id="messageInput" layoutX="20.0" layoutY="570.0" prefWidth="1100.0"/>
      <Button fx:id="sendButton" layoutX="1130.0" layoutY="570.0" text="Send"/>
   </children>
</AnchorPane>
