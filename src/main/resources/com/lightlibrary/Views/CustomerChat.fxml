<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="chatRoot" prefHeight="900.0" prefWidth="1440.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lightlibrary.Controllers.CustomerChatController">
   <children>
      <!-- Tiêu đề của Chat -->
      <Label layoutX="391.0" layoutY="100.0" prefHeight="50.0" prefWidth="519.0" text="This is chat">
         <font>
            <Font size="40.0" />
         </font>
      </Label>

      <!-- VBox chứa các nút chọn -->
      <VBox layoutX="500.0" layoutY="200.0" spacing="20.0">
         <Button fx:id="buttonOpenIP" text="Open a new IP address" onAction="#handleOpenIPAddress" />
         <Button fx:id="buttonConnectIP" text="Connect to an existing IP address" onAction="#handleConnectIPAddress" />
      </VBox>

      <!-- Trường nhập IP, ẩn khi chưa cần thiết -->
      <TextField fx:id="ipField" layoutX="500.0" layoutY="350.0" promptText="Enter IP address to connect" visible="false" />

      <!-- Nút Connect, ẩn khi chưa cần thiết -->
      <Button fx:id="buttonConnect" text="Connect" layoutX="500.0" layoutY="400.0" onAction="#handleConnectToServer" visible="false" />

      <!-- Khu vực hiển thị tin nhắn -->
      <TextArea fx:id="messageArea" layoutX="100.0" layoutY="500.0" prefHeight="300.0" prefWidth="1240.0" editable="false" wrapText="true" />

      <!-- Trường nhập tin nhắn -->
      <TextField fx:id="inputField" layoutX="100.0" layoutY="820.0" prefWidth="1140.0" promptText="Enter your message..." />

      <!-- Nút gửi tin nhắn -->
      <Button fx:id="buttonSendMessage" text="Send" layoutX="1250.0" layoutY="820.0" onAction="#sendMessage" />
   </children>
</AnchorPane>
